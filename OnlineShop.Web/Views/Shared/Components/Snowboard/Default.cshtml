@model IEnumerable<Category>

@{
    ViewData["Title"] = "Snowboard";
}
@if (Model.Count() != 0)
{
    <li class="dropdown">
        <a asp-controller="Categories" asp-action="Index" class="dropdown-toggle btn btn-outline-info my-2 my-sm-0" data-toggle="dropdown">
            Snowboard
        </a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>
                    <a class="btn btn-outline-info my-2 my-sm-0" asp-controller="Categories" asp-action="Index" asp-route-id="@category.Id">@category.Name.ToFriendlyUrl()</a>
                </li>
            }
        </ul>
    </li>
}