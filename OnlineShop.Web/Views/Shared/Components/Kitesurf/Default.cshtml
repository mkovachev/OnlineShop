@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kitesurf";
}
@if (Model.Count() != 0)
{
    <li class="dropdown">
        <a asp-controller="Categories" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">
            Kitesurf<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">

            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Category" asp-action="Index" asp-route-id="@category.Id">@category.Name</a> <!--asp-route-title="category.Name.ToFriendlyUrl()" not working-->
                </li>
            }
        </ul>
    </li>
}