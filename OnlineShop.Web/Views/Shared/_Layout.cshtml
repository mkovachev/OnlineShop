<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] OnlineShop</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">OnlineShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">@await Component.InvokeAsync("Snowboard")</li>
                <li class="nav-item active">@await Component.InvokeAsync("Splitboard")</li>
                <li class="nav-item active">@await Component.InvokeAsync("Ski")</li>
                <li class="nav-item active">@await Component.InvokeAsync("Wakeboard")</li>
                <li class="nav-item active">@await Component.InvokeAsync("Kitesurf")</li>
                <li class="nav-item active">@await Component.InvokeAsync("ShoppingCart")</li>
                <li class="nav-item active"><a class="nav-link" asp-controller="Brands" asp-action="Index">Brands</a></li>
                <li class="nav-item active"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact us</a></li>
                <li class="nav-item active"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                <partial name="_LoginPartial" />  <!--login/register-->
            </ul>
        </div>
    </nav>
    <!--nav admin section -->
    @if (User.Identity.IsAuthenticated && User.IsInRole(ControllerConstants.AdministratorRole))
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Create">Create Category</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Create">Create Product</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a></li>
                </ul>
            </div>
        </nav>
    }

<div class="container body-content">
    @if (TempData.ContainsKey(ControllerConstants.SuccessMessage))
    {
        <div class="alert alert-success">
            @TempData[ControllerConstants.SuccessMessage]
        </div>
    }
    @if (TempData.ContainsKey(ControllerConstants.ErrorMessage))
    {
        <div class="alert alert-danger">
            @TempData[ControllerConstants.ErrorMessage]
        </div>
    }
    @if (TempData.ContainsKey(ControllerConstants.WarningMessage))
    {
        <div class="alert alert-warning">
            @TempData[ControllerConstants.WarningMessage]
        </div>
    }
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; 2020 OnlineShop</p>
    </footer>
</div>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>