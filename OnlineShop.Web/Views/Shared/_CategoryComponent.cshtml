@model IEnumerable<Category>


@if (Model.Count() != 0)
{
    <li class="nav-item dropdown">
        <a asp-controller="Categories" asp-action="Index" data-toggle="dropdown">@ViewData["Title"]</a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li class="nav-item">
                    <a asp-controller="Categories" asp-action="Index" asp-route-id="@category.Id">@category.Name.ToFriendlyUrl()</a>
                </li>
            }
        </ul>
    </li>
}